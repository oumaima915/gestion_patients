{% extends 'base.html.twig' %}

{% block title %}Gèrer patient{% endblock %}

{% block body %}
    <h1>Gèrer patient</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.email }}</td>
                <td>{{ patient.password }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.telephone }}</td>
                <td>{{ patient.adresse }}</td>
                <td>
                    <a href="{{ path('patient_show', {'id': patient.id}) }}">Afficher</a>
                    <a href="{{ path('patient_edit', {'id': patient.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('patient_new') }}">Ajouter nouveau patient</a>
{% endblock %}
